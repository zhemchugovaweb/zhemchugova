---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header
  class="absolute flex justify-between items-center px-5 md:px-[5%] md:top-12 w-full bg-transparent z-50 mix-blend-difference"
>
  <img
    src="/logo.svg"
    alt="Alena Zhemchugova"
    class="h-14 w-14 md:h-[4.2vw] md:w-[4.2vw] mix-blend-difference z-50"
  />
  <a
    href={lang === "ru" ? "/en" : "/"}
    class="md:text-[0.95vw] font-nova text-right font-medium mix-blend-difference text-[#CBBA9E]"
    >{t("nav.lang")}</a
  >
</header>
